
# Server port
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# Database host
DB_HOST=localhost

# Database port
DB_PORT=3306

# Database name
DB_NAME=team_task_manager

# Database username
DB_USER=root

# Database password
DB_PASSWORD=your-database-password-here

# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-here

# JWT token expiration time
JWT_EXPIRES_IN=24h

# JWT refresh token expiration time
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt salt rounds for password hashing (default: 12)
BCRYPT_SALT_ROUNDS=12

# Rate limiting - window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Rate limiting - max requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# CORS origin (frontend URL)
CORS_ORIGIN=http://localhost:3000

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE=logs/app.log

# Application name
APP_NAME=Team Task Manager

# Application version
APP_VERSION=1.0.0

# Maximum file upload size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Allowed file types for uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# Upload directory
UPLOAD_DIR=uploads